{
    "name": "kola-web",
    "version": "0.0.0",
    "private": true,
    "description": "Vehicle bidding marketplace Web",
    "license": "UNLICENSED",
    "scripts": {
        "build": "next build",
        "dev": "NODE_OPTIONS='-r next-logger' next dev | pino-pretty",
        "generate:queries": "yarn graphql-codegen --config ./codegen.ts",
        "lint": "yarn lint:cspell && yarn lint:prettier && yarn lint:package-json && yarn lint:eslint",
        "lint:cspell": "cspell --no-progress --no-summary '**'",
        "lint:eslint": "next lint",
        "lint:package-json": "npmPkgJsonLint --configFile ./.packagerc.js .",
        "lint:prettier": "prettier --loglevel warn --check './**/*{yaml,yml,json,md,gql,graphql}'",
        "start": "NODE_OPTIONS='-r next-logger' next start",
        "test:integration": "LD_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/ playwright test --ui"
    },
    "dependencies": {
        "@apollo/client": "^3.7.13",
        "@emotion/react": "^11.10.8",
        "@emotion/server": "^11.10.0",
        "@hookform/resolvers": "^3.1.0",
        "@mantine/core": "^6.0.10",
        "@mantine/hooks": "^6.0.10",
        "@mantine/next": "^6.0.10",
        "@mantine/notifications": "^6.0.10",
        "@tabler/icons-react": "^2.17.0",
        "cookies-next": "^2.1.1",
        "graphql": "^16.6.0",
        "next": "13.3.4",
        "next-logger": "^3.0.2",
        "pino": "^8.12.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-hook-form": "^7.43.9",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@graphql-codegen/cli": "^3.3.1",
        "@graphql-codegen/fragment-matcher": "^4.0.1",
        "@graphql-codegen/introspection": "^3.0.1",
        "@graphql-codegen/typescript": "^3.0.4",
        "@graphql-codegen/typescript-operations": "3.0.4",
        "@graphql-codegen/typescript-react-apollo": "^3.3.7",
        "@playwright/test": "^1.33.0",
        "@rimac-technology/style-guide": "^7.0.0",
        "@types/eslint": "^8.37.0",
        "@types/node": "18.16.3",
        "@types/prettier": "^2.7.2",
        "@types/react": "18.2.0",
        "@types/react-dom": "18.2.1",
        "cspell": "^6.31.1",
        "eslint": "^8.39.0",
        "npm-package-json-lint": "^6.4.0",
        "pino-pretty": "^10.0.0",
        "prettier": "^2.8.8",
        "typescript": "5.0.4"
    },
    "packageManager": "yarn@3.5.0"
}
